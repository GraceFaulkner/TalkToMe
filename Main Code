#SPEECH RECOGNITION########################################################

import speech_recognition as sr
r = sr.Recognizer()

harvard = sr.AudioFile('harvard.wav')
with harvard as source:
    audio = r.record(source)
    
type(audio)
r.recognize_google(audio) #to be run on the console and not on the script

